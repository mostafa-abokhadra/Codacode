<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
      body {
        background-image: url("/imgs/wallpaper.webp");
        background-size: cover;
        background-position: center;
      }
    </style>
  </head>
  <body>
    <nav class="bg-white shadow-md">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
          <!-- Left Section: Logo and Links -->
          <div class="flex items-center space-x-8">
            <!-- Logo -->
            <a href="/" class="text-xl font-bold text-green-600">Codacode</a>
            <!-- Links beside the logo -->
            <div class="hidden md:flex space-x-6">
              <a href="/projects" class="text-gray-800 hover:text-blue-600"
                >Projects</a
              >
              <a href="/about" class="text-gray-800 hover:text-blue-600"
                >About</a
              >
            </div>
          </div>

          <!-- Right Section: Sign Up and Login -->
          <div class="hidden md:flex items-center space-x-4">
            <a
              href="/auth/signup"
              class="bg-green-500 text-white px-4 py-2 rounded-md hover:bg-green-600"
              >Sign Up</a
            >
            <a
              href="/auth/login"
              class="bg-green-500 text-white px-4 py-2 rounded-md hover:bg-green-600"
              >Login</a
            >
          </div>

          <!-- Hamburger Menu Button -->
          <div class="md:hidden relative z-50">
            <button id="menu-button" class="text-gray-800 focus:outline-none">
              <svg
                class="w-6 h-6"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                viewBox="0 0 24 24"
                xmlns="http://www.w3.org/2000/svg"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M4 6h16M4 12h16M4 18h16"
                ></path>
              </svg>
            </button>
          </div>
        </div>
      </div>

      <!-- Mobile Menu -->
      <div
        id="mobile-menu"
        class="hidden bg-white shadow-md absolute top-0 left-0 w-full z-40"
      >
        <a
          href="/projects"
          class="block px-4 py-2 text-gray-800 hover:bg-blue-100 border-b border-gray-300"
          >Projects</a
        >
        <a
          href="/about"
          class="block px-4 py-2 text-gray-800 hover:bg-blue-100 border-b border-gray-300"
          >About</a
        >
        <a
          href="/auth/signup"
          class="block px-4 py-2 hover:bg-green-600 border-b border-gray-300"
          >Sign Up</a
        >
        <a
          href="/auth/login"
          class="block px-4 py-2 hover:bg-green-600 border-b border-gray-300"
          >Login</a
        >
      </div>
    </nav>
    <div
      class="flex justify-center items-center min-h-screen bg-opacity-70 bg-black"
    >
      <div class="w-full max-w-md bg-white p-8 rounded-lg shadow-lg">
        <h2 class="text-3xl font-bold text-center text-gray-700">Login</h2>
        <% if (message) { %>
        <div
          class="alert alert-info bg-green-100 text-green-800 border border-green-300 rounded-lg p-4 mb-4 mt-4 text-center"
        >
          <%= message %>
        </div>
        <% } %>

        <form action="/auth/login" method="POST" class="mt-6 space-y-4">
          <!-- Email Field -->
          <div>
            <label for="email" class="block text-sm font-medium text-gray-600"
              >Email</label
            >
            <input
              type="email"
              id="email"
              name="email"
              required
              class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-[#48bb78] focus:border-transparent"
              placeholder="Your email address"
            />
          </div>

          <!-- Password Field -->
          <div>
            <label
              for="password"
              class="block text-sm font-medium text-gray-600"
              >Password</label
            >
            <input
              type="password"
              id="password"
              name="password"
              required
              class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-[#48bb78] focus:border-transparent"
              placeholder="Your password"
            />
          </div>
          <!-- Login Button -->
          <div>
            <button
              type="submit"
              class="w-full py-2 bg-[#48bb78] text-white rounded-md hover:bg-green-600 focus:outline-none focus:ring-2 focus:ring-[#48bb78] focus:ring-opacity-50"
            >
              Login
            </button>
          </div>
        </form>

        <!-- Continue with Google Button -->
        <div class="mt-4 flex items-center justify-center space-x-2">
          <button
            onclick="window.location.href='/auth/google'"
            class="w-full py-2 flex items-center justify-center bg-red-600 text-white rounded-md hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-400 focus:ring-opacity-50"
          >
            <img
              src="https://upload.wikimedia.org/wikipedia/commons/c/c1/Google_%22G%22_logo.svg"
              alt="Google Logo"
              class="w-5 h-5 mr-2"
            />
            Continue with Google
          </button>
        </div>

        <!-- Signup Link -->
        <div class="mt-6 text-center">
          <p class="text-sm text-gray-600">
            Don't have an account?
            <a
              href="/auth/signup"
              class="text-[#48bb78] hover:text-green-600 font-semibold"
              >Sign up</a
            >
          </p>
        </div>
      </div>
    </div>
    <footer class="bg-gray-800 text-white py-12">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 space-y-12">
        <!-- Feedback Section -->
        <div class="text-center">
          <h2 class="text-3xl font-bold text-green-400">
            Your Feedback Matters
          </h2>
          <p class="mt-2 text-gray-400">
            Help us improve! Report bugs, suggest enhancements, or share your
            thoughts.
          </p>
        </div>

        <!-- Actions Section -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <!-- Bug Report Section -->
          <div class="bg-gray-700 p-6 rounded-lg shadow-lg text-center">
            <h3 class="text-xl font-bold text-red-400">Report a Bug</h3>
            <p class="mt-2 text-gray-400">
              Encountered an issue? Let us know so we can fix it promptly.
            </p>
            <a
              href="#"
              class="mt-4 inline-block bg-red-500 text-white px-6 py-3 rounded-md text-lg hover:bg-red-600 transition"
            >
              Report Bug
            </a>
          </div>
          <!-- Enhancement Suggestion Section -->
          <div class="bg-gray-700 p-6 rounded-lg shadow-lg text-center">
            <h3 class="text-xl font-bold text-blue-400">
              Suggest an Enhancement
            </h3>
            <p class="mt-2 text-gray-400">
              Have an idea to improve our platform? Share it with us!
            </p>
            <a
              href="#"
              class="mt-4 inline-block bg-blue-500 text-white px-6 py-3 rounded-md text-lg hover:bg-blue-600 transition"
            >
              Suggest Enhancement
            </a>
          </div>
        </div>

        <!-- Follow, Contact, Hire Section -->
        <div class="space-y-8 text-left">
          <!-- Follow Us -->
          <div>
            <h3 class="text-lg font-bold text-green-400">Follow Us</h3>
            <ul class="mt-4 space-y-2">
              <li>
                <a href="#" class="hover:underline text-gray-300">Facebook</a>
              </li>
              <li><a href="#" class="hover:underline text-gray-300">X</a></li>
            </ul>
          </div>
          <!-- Contact Us -->
          <div>
            <h3 class="text-lg font-bold text-green-400">Contact Us</h3>
            <ul class="mt-4 space-y-2">
              <li>
                <span class="text-gray-300">Email: </span>
                <a
                  href="mailto:contact@example.com"
                  class="hover:underline text-green-400"
                  >contact@example.com</a
                >
              </li>
              <li><span class="text-gray-300">Phone: </span>+123 456 7890</li>
            </ul>
          </div>
          <!-- Hire Me -->
          <div>
            <h3 class="text-lg font-bold text-green-400">Hire Me</h3>
            <ul class="mt-4 space-y-2">
              <li>
                <a href="#" class="hover:underline text-gray-300">LinkedIn</a>
              </li>
              <li>
                <a href="#" class="hover:underline text-gray-300">GitHub</a>
              </li>
              <li>
                <a
                  href="mailto:hireme@example.com"
                  class="hover:underline text-gray-300"
                  >Email</a
                >
              </li>
            </ul>
          </div>
        </div>

        <!-- Bottom Note -->
        <div class="text-center text-gray-500 text-sm">
          &copy; 2024 Codacode. All rights reserved.
        </div>
      </div>
    </footer>

    <script>
      // JavaScript to toggle the mobile menu visibility
      const menuButton = document.getElementById("menu-button");
      const mobileMenu = document.getElementById("mobile-menu");

      menuButton.addEventListener("click", () => {
        mobileMenu.classList.toggle("hidden"); // Toggle the visibility of the mobile menu
      });
    </script>
  </body>
</html>
