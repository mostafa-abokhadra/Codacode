<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Portfolio</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script
      src="https://kit.fontawesome.com/2157171c32.js"
      crossorigin="anonymous"
    ></script>
    <script>
      tailwind.config = {
        theme: {
          extend: {
            colors: {
              primary: "rgb(34 197 94 / var(--tw-bg-opacity, 1))",
              background: "#f3f4f6",
              textDark: "#1f2937",
            },
            animation: {
              fadeIn: "fadeIn 2s ease-in-out",
            },
            keyframes: {
              fadeIn: {
                "0%": { opacity: 0 },
                "100%": { opacity: 1 },
              },
            },
          },
        },
      };
    </script>
  </head>
  <body class="bg-background text-textDark">
    <section
      class="h-screen flex flex-col md:flex-row items-center justify-center text-center md:text-left p-10 gap-10 animate-fadeIn relative"
    >
      <button
        class="absolute top-4 right-4 px-3 py-1 bg-primary text-white rounded-md shadow-lg hover:bg-green-700 transition"
      >
        Edit
      </button>
      <img
        id="portfolio-image"
        src="https://media.istockphoto.com/id/1332100919/vector/man-icon-black-icon-person-symbol.jpg?s=612x612&w=0&k=20&c=AVVJkvxQQCuBhawHrUhDRTCeNQ3Jgt0K1tXjJsFy1eg="
        alt="User Image"
        class="w-60 h-60 rounded-full border-4 border-primary shadow-lg"
      />
      <div>
        <h1 class="text-5xl font-bold">
          Hi, I'm
          <span id="portfolio-name" class="text-primary">Your Name</span>
        </h1>
        <p id="portfolio-tagline" class="text-xl mt-4"></p>
        <p id="portfolio-about" class="mt-4 max-w-lg"></p>
        <div class="flex gap-4 mt-6">
          <a
            href="#projects"
            class="px-6 py-3 bg-primary rounded-full shadow-lg hover:bg-green-700 transition"
            >My Projects</a
          >
          <a
            href="#contact"
            class="px-6 py-3 border border-primary rounded-full shadow-lg hover:bg-primary transition"
            >Contact</a
          >
        </div>
      </div>
    </section>

    <section class="py-20 bg-white text-center animate-fadeIn relative">
      <button
        class="absolute top-4 right-4 px-3 py-1 bg-primary text-white rounded-md shadow-lg hover:bg-green-700 transition"
      >
        Edit
      </button>
      <h2 class="text-4xl font-bold">Education</h2>
      <div
        id="education-container"
        class="grid md:grid-cols-4 gap-6 mt-6 max-w-6xl mx-auto"
      >
        <p id="noEducationCardsToRender" class="mt-4 max-w-lg hidden">
          edit from top right corner button
        </p>
      </div>
    </section>

    <section id="projects" class="py-20 text-center animate-fadeIn relative">
      <button
        class="absolute top-4 right-4 px-3 py-1 bg-primary text-white rounded-md shadow-lg hover:bg-green-700 transition"
      >
        Edit
      </button>
      <h2 class="text-4xl font-bold">Projects</h2>
      <div
        id="projects-container"
        class="grid md:grid-cols-3 gap-6 mt-6 max-w-6xl mx-auto"
      >
        <p id="noProjectCardsToRender" class="mt-4 max-w-lg hidden">
          edit from top right corner button
        </p>
      </div>
    </section>

    <section
      id="skills"
      class="py-20 text-center animate-fadeIn relative bg-white"
    >
      <button
        class="absolute top-4 right-4 px-3 py-1 bg-primary text-white rounded-md shadow-lg hover:bg-green-700 transition"
      >
        Edit
      </button>
      <h2 class="text-4xl font-bold">Skills</h2>
      <div
        id="skills-container"
        class="grid md:grid-cols-3 gap-6 mt-6 max-w-6xl mx-auto"
      ></div>
    </section>
    <!-- Contact Section -->
    <section
      id="contact"
      class="py-20 bg-white text-center animate-fadeIn relative"
      style="background-color: #f3f4f6"
    >
      <button
        class="absolute top-4 right-4 px-3 py-1 bg-primary text-white rounded-md shadow-lg hover:bg-green-700 transition"
      >
        Edit
      </button>
      <h2 class="text-4xl font-bold">Contact Me</h2>

      <!-- Social Media Links -->
      <div class="mt-8">
        <!-- <p class="text-lg font-semibold">Connect with me:</p> -->
        <div class="flex justify-center space-x-6 mt-4">
          <a
            href="https://instagram.com/yourusername"
            target="_blank"
            class="text-gray-600 hover:text-primary text-2xl"
          >
            <i id="instagrma-icon" class="fab fa-instagram"></i>
          </a>
          <a
            href="https://facebook.com/yourusername"
            target="_blank"
            class="text-gray-600 hover:text-primary text-2xl"
          >
            <i id="facebook-icon" class="fab fa-facebook"></i>
          </a>
          <a
            href="https://linkedin.com/in/yourusername"
            target="_blank"
            class="text-gray-600 hover:text-primary text-2xl"
          >
            <i id="linkedin-icon" class="fab fa-linkedin"></i>
          </a>
          <a
            href="https://github.com/yourusername"
            target="_blank"
            class="text-gray-600 hover:text-primary text-2xl"
          >
            <i id="github-icon" class="fab fa-github"></i>
          </a>
          <a
            href="https://youtube.com/c/yourchannel"
            target="_blank"
            class="text-gray-600 hover:text-primary text-2xl"
          >
            <i id="youtube-icon" class="fab fa-youtube"></i>
          </a>
          <a
            href="https://yourwebsite.com"
            target="_blank"
            class="text-gray-600 hover:text-primary text-2xl"
          >
            <i id="website-icon" class="fas fa-globe"></i>
          </a>
          <a
            href="tel:+1234567890"
            class="text-gray-600 hover:text-primary text-2xl"
          >
            <i id="phone-icon" class="fas fa-phone"></i>
          </a>
          <a
            href="mailto:your@email.com"
            class="text-gray-600 hover:text-primary text-2xl"
          >
            <i id="mail-icon" class="fas fa-envelope"></i>
          </a>
        </div>
      </div>
    </section>

    <script src="/js/portfolio.js"></script>
  </body>
</html>
