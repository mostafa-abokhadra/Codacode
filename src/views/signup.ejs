    <!-- -------------------------------------------------- -->

    <div
      class="flex justify-center items-center min-h-screen bg-opacity-70 bg-black"
      id="signup-parent"
    >
      <div
        id="signup-container"
        class="w-full max-w-md bg-white p-8 rounded-lg shadow-lg"
      >
        <h2 class="text-3xl font-bold text-center text-gray-700">
          Create an Account
        </h2>
        <form id="signup-form" class="mt-6 space-y-4">
          <div>
            <label
              for="fullName"
              class="block text-sm font-medium text-gray-600"
              >Full Name</label
            >
            <input
              type="text"
              id="fullName"
              class="signup-input"
              name="fullName"
              required
              placeholder="Your full name"
            />
          </div>

          <!-- Email Field -->
          <div>
            <label for="email" class="block text-sm font-medium text-gray-600"
              >Email</label
            >
            <input
              type="email"
              id="email"
              class="signup-input"
              name="email"
              required
              placeholder="Your email address"
            />
          </div>

          <!-- Password Field -->
          <div>
            <label
              for="password"
              class="block text-sm font-medium text-gray-600"
              >Password</label
            >
            <input
              type="password"
              id="password"
              class="signup-input"
              name="password"
              required
              placeholder="Create a password"
            />
          </div>

          <!-- Confirm Password Field -->
          <div>
            <label
              for="confirm-password"
              class="block text-sm font-medium text-gray-600"
              >Confirm Password</label
            >
            <input
              type="password"
              id="confirm-password"
              class="signup-input"
              name="confirm-password"
              required
              placeholder="Confirm your password"
            />
          </div>

          <!-- Sign Up Button -->
          <div>
            <button type="submit" id="signup-submit-btn">Sign Up</button>
          </div>
        </form>

        <!-- Sign Up with Google Button -->
        <div class="mt-4 flex items-center justify-center space-x-2">
          <button
            onclick="window.location.href='/auth/google'"
            id="signup-google-btn"
          >
            <img
              src="/imgs/4-signup-google-logo.svg"
              alt="Google Logo"
              class="w-5 h-5 mr-2"
            />
            Sign Up with Google
          </button>
        </div>

        <!-- Already have an account? -->
        <div class="mt-6 text-center">
          <p class="text-sm text-gray-600">
            Already have an account?
            <a href="/auth/login" id="already-have-account-login-btn">Login</a>
          </p>
        </div>
      </div>
    </div>

    <footer class="bg-gray-800 text-white py-12">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 space-y-12">
