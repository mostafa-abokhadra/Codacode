  <style>
    .popup-overlay {
      display: none; /* Initially hidden */
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.5);
      justify-content: center;
      align-items: center;
      z-index: 1000;
    }

    /* Popup content */
    .popup-content {
      background: #fff;
      border-radius: 10px;
      padding: 20px 30px;
      max-width: 400px;
      width: 90%;
      text-align: center;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
      position: relative;
      animation: popup-appear 0.3s ease;
    }

    /* Close button */
    .popup-close {
      position: absolute;
      top: 10px;
      right: 10px;
      background: transparent;
      border: none;
      font-size: 1.5rem;
      font-weight: bold;
      color: #888;
      cursor: pointer;
      transition: color 0.3s ease;
    }

    .popup-close:hover {
      color: #333;
    }

    /* Heading */
    .popup-content h2 {
      color: #28a745;
      font-size: 1.8rem;
      margin-bottom: 10px;
    }

    /* Paragraph */
    .popup-content p {
      font-size: 1rem;
      line-height: 1.5;
      color: #555;
    }

    .popup-content p a {
      color: #007bff;
      text-decoration: none;
      font-weight: bold;
    }

    .popup-content p a:hover {
      text-decoration: underline;
    }

    /* Responsive animation */
    @keyframes popup-appear {
      from {
        transform: scale(0.9);
        opacity: 0;
      }
      to {
        transform: scale(1);
        opacity: 1;
      }
    }

    /* Button to show popup */
    button {
      margin: 20px;
      padding: 10px 20px;
      background: #007bff;
      color: #fff;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      font-size: 1rem;
      transition: background 0.3s ease;
    }

    button:disabled {
      background: #ccc; /* Gray background */
      color: #666; /* Dimmed text color */
      cursor: not-allowed; /* "Not allowed" cursor */
    }
    button:disabled:hover {
      pointer-events: none; /* Ensures no interaction on hover */
      background: #ccc; /* Keeps the background unchanged */
      color: #666; /* Keeps the text color unchanged */
      cursor: not-allowed; /* Shows the "not allowed" cursor */
    }
  </style>
